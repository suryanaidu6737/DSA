class Solution {
    public int[] twoSum(int[] arr, int target) {
        HashMap<Integer,Integer> map=new  HashMap<>();
        for(int i=0;i<arr.length;i++)
        {
            if(map.containsKey(arr[i]))
                return new int[]{i,map.get(arr[i])};
            else
                map.put(target-arr[i],i);
        }
        return new int[0];
    }
}
